<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.matis8571.countyourbike">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CountYourBike"
        tools:targetApi="31">
        <activity
            android:name=".App.MainActivity"
            android:exported="true"
            android:label="MainActivity"
            android:theme="@style/Theme.CountYourBike.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- add new activity here -->
        <activity
            android:name=".App.BikeProfileSelect"
            android:label="BikeProfileSelect"
            android:theme="@style/Theme.CountYourBike.NoActionBar" />
        <activity
            android:name=".App.Models.CreateNewBikeActivity"
            android:label="CreateNewBikeActivity"
            android:theme="@style/Theme.CountYourBike.NoActionBar" />
        <activity
            android:name=".Notepad.NotepadActivity"
            android:theme="@style/Theme.NotepadApp.NoActionBar" />
        <activity
            android:name=".Notepad.Models.NotesTakerActivity"
            android:exported="true"
            android:theme="@style/Theme.NotepadApp.NoActionBar" />

    </application>

</manifest>